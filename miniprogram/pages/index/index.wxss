page {
  width:100%;
  height:100%;
}
.container {
  height:100%;
  width:100%;
  display:flex;
  flex-direction: column;
  align-items: center;
  background-color: #edece8;
}
.card {
  height:200px;
  width:650rpx;
  margin-top:100rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0 4px 10px 0 rgba(0,0,0, 0.2);
  border-radius: 5px;
}
.card-top {
  width:100%;
  height:30px;
  background-color: #fff;
  border-radius: 5px 5px 0 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.title {
  /* font-family: Microsoft Yahei; */
  font-size: 40rpx;
}
.card-bottom {
  width:100%;
  height:170px;
  background-color: darkcyan;
  border-radius: 0 0 5px 5px;
  position: relative;
}
.bg {
  width:100%;
  height:100%;
  border-radius: 0 0 5px 5px;
}
.msgbox {
  height:170px;
  width:100%;
  border-radius: 0 0 5px 5px;
  background-color:rgba(0,0,0, 0.2);
  position: absolute;
  top:0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.msg {
  color:#f0f0f0;
}
.opbar {
  height:150rpx;
  width:650rpx;
  display: flex;
  margin-top:100rpx;
}
.opicons {
  height:80rpx;
  width:80rpx;
}
.opborder {
  height:100rpx;
  width:100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* background-color: #fff; */
  border-radius: 50%;
  border:2px solid #000;
}
.imgbox {
  flex:1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.add {
  position:fixed;
  bottom:0;
  width:400rpx;
  height:350rpx;
}
.add-item,.add-icon {
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  color:#fff;
  background-color: #33c9ff;
  border-radius: 50%;
}
.add-item {
  bottom:90rpx;
  left:150rpx;
  width:100rpx;
  height:100rpx;
  font-size: 35rpx;
  transition: transfrom 0.3s cubic-bezier(0.42,0,0.58,1),-webkit-transform 0.3s cubic-bezier(0.42,0,0.58,1);
}
.add-icon {
  bottom:80rpx;
  left:140rpx;
  width:120rpx;
  height:120rpx;
  font-size: 85rpx;
}
.add-icon-txt {
  margin-top:-10rpx;
}
.active .add-item:nth-of-type(1) {
  transform: rotate(10deg) translateX(-140rpx);
}
.active .add-item:nth-of-type(1) .add-item-txt {
  transform: rotate(-10deg);
}
.active .add-item:nth-of-type(2) {
  transform: rotate(90deg) translateX(-140rpx);
}
.active .add-item:nth-of-type(2) .add-item-txt {
  transform: rotate(-90deg);
}
.active .add-item:nth-of-type(3) {
  transform: rotate(170deg) translateX(-140rpx);
}
.active .add-item:nth-of-type(3) .add-item-txt {
  transform: rotate(-170deg);
}

